{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:react/recommended",
    "standard"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "no-tabs": "off",
    "space-before-function-paren": "off",
    "react/react-in-jsx-scope": "off",
    "no-extra-semi": "off",
    "semi": "off",
    "indent": "off",
    "no-use-before-define": "off",
    "comma-dangle": "off"
  }
}
